  <ThingDef ParentName="SeafoodFarmBase">
    <defName>SeafoodFarmKelp</defName>
    <label>Kelp Farm</label>
    <description>A simple vertical ocean farm, spawning Kelp, Mussels and Oysters over time. Can only be built in ocean water.</description>
    <graphicData>
      <texPath>SeafoodFarmKelp</texPath>
    </graphicData>
    <comps>
      <li Class="SeafoodFarm.SeafoodFarmCompProperties">
        <compClass>SeafoodFarm.SeafoodFarmComp</compClass>
        <spawningThingDefs>
          <li>SC_Kelp</li>
          <li>SC_Mussel</li>
          <li>SC_Oyster</li>
        </spawningThingDefs>
        <spawnAmounts>
          <li>40</li>
          <li>20</li>
          <li>20</li>
        </spawnAmounts>
        <spawnDays>7</spawnDays>
        <affectedByDefName>
          <li>GTF_FishingNetBasic</li>
          <li>GTF_FishingNetComplex</li>
          <li>GTF_FishingNetAdvanced</li>
          <li>GTF_FishingNetIce</li>
          <li>WFFT_FishTrap</li>
          <li>WFFT_FishNet</li>
          <li>FishingPier</li>
          <li>ZP_AquacultureNet</li>
          <li>ZP_AquacultureNet_Large</li>
          <li>SewageOutlet</li>
          <li>Cloaca</li>
          <li>ShellfishTrap</li>
        </affectedByDefName>
        <affectRange>5</affectRange>
      </li>
    </comps>
  </ThingDef>
